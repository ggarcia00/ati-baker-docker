
location /{{ slug }} {
        
    root /var/www;
    index index.php;
    try_files $uri $uri/ /{{ slug }}/index.php?$args;

    location ~ \.php$ {
        root /var/www;
        rewrite ^/{{ slug }}(.*)$ $1 break;
        fastcgi_pass php-handler-{{ slug }};
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
    }

}

